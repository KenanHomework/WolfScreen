<Application x:Class="Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Client" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="MVVM/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Colors -->
                <ResourceDictionary>

                    <!-- rgba(39, 39, 39, 255) -->
                    <SolidColorBrush x:Key="Secondary_clr"   Color="#272E37"/>

                    <!-- rgba(31, 32, 34, 255) -->
                    <SolidColorBrush x:Key="MainDark_clr" Color="#1D2126"/>

                    <!-- rgba(44, 45, 47, 255) -->
                    <SolidColorBrush x:Key="SecondaryLight_clr"  Color="#2F353C"/>

                </ResourceDictionary>

                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary/>


            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
